doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet" href="../public/bootstrap/css/bootstrap.min.css")
    link(rel="stylesheet" href="admin.css")
    title Boda Banja
  body
    .navbar
      a(href="/home") Home
      .dropdown
        button.dropbtn
          | View Details
          i.fa.fa-caret-down
        .dropdown-content
          a(href="./customerlists" target="_blank") Customer
          a(href="./saleslist" target="_blank") Sales Executive
      .dropdown
        button.dropbtn
          | Register
          i.fa.fa-caret-down
        .dropdown-content
          a(href="./customerreg" target="_blank") Customer
          a(href="./login" target="_blank") Sales Executive
    .container
      .row
        .col-md-5
          h3  Personal Information 
          span
          form(method="POST" action="/addname")
            | Names:
            br
            input(type="text" name="username" value="" placeholder="Username")
            br
            br
            |     Password:
            br
            input(type="password" name="password" value="" placeholder="password")
            br
            br
            |     Current Date:
            br
            input(type="date" required="" name="date" value="date" placeholder="")
            br
            br
            |     Email:
            br
            input(type="text" name="email" value="" placeholder="Email")
            br
            br
            |         Contact:
            br
            input(type="tel" name="phonenumber" value="" placeholder="")
            br
            br
            |     Gender:
            br
            input(type="radio" name="msex" value="Male")
            span Male
            input(type="radio" name="msex" value="Female")
            span Female
            br
            br
            |     NIN:
            br
            input(type="text" name="nin" value="" placeholder="NIN")
            br
            br
            input(type="submit" value="Add ")
